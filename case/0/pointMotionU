FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointMotionU;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    outlet 
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    top
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    bottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    s0
    {
        type            symmetryPlane;
    }
    s1
    {
        type            symmetryPlane;
    }

    hull
    {
        type            fixedValue;     // for motion patch
        value           uniform (0 0 0);
        //type            oscillatingVelocity;
        //amplitude       (0.5 0.5 0);
        //omega           0.628;
    }
}

